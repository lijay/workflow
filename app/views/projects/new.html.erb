<div class="span12">
	<%= simple_form_for @project do |f| %>
		<%= f.input :title , :input_html => { class: "input_xxlarge" } %>
		<%= f.input :description, :input_html => { class: "input_xxlarge"} %>

		<div class="form-actions">
			<%= f.submit "Submit", :disable_with => "Submiting...", :class => "btn btn-primary" %>
		</div>
	<% end %>
</div>