<div class="span12">
	<%= simple_form_for [@project, @step] do |f| %>
		<%= f.input :name, :input_html => { :class => "input_xxlarge" } %>
		<%= f.input :memo, :input_html => { :class => "input_xxlarge"} %>
		<div class="form-actions">
			<%= f.submit "Submit", :disable_with => "Submiting...", :class => "btn btn-primary" %>
			<%= link_to("Cancel", projects_path, :class=> "btn") %>
		</div>
	<% end %>
</div>